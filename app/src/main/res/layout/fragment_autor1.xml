<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fredy.aplicacionlibro.Autor1Fragment">



    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textAuthorName"
            android:layout_width="328dp"
            android:layout_height="58dp"
            android:text="Julio Cortázar"
            android:textSize="30sp"
            android:layout_weight="0.06" />


        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/cortazar"
           android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_width="203dp"
            android:layout_weight="0.48" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="328dp"
            android:layout_height="58dp"
            android:text="!Qué buen porro!"
            android:textSize="30sp"
            android:layout_weight="0.06" />

        <TextView
            android:id="@+id/textIndex"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_weight="0.06"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Share"
            android:onClick="ShowCurrentItem"
            android:layout_weight="0.06" />


    </LinearLayout>


</FrameLayout>
